{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "watch": false,
    "removeComments": true,
    "rootDir": "src",
    "outDir": "build",
    "noImplicitAny": true,
    "experimentalDecorators": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}